const FAB_VERSION = '1.0.1';
const FAB_NAME = 'fab-cli (fab)';

$autoloaders = array(
    __DIR__ . '/../vendor/autoload.php',
    __DIR__ . '/../../../autoload.php'
);

foreach ($autoloaders as $file) {
    if (file_exists($file)) {
        break;
    }
}

require_once $file;

function usage() {
  printf("Usage: %s [-h|--help] [-v|--version] command [arg...]\n", FAB_NAME);
  exit;
}

function version() {
  printf("%s: version %s\n", FAB_NAME, FAB_VERSION);
  exit;
}

function parseargs($argv) {
    array_shift($argv);

    $options = getopt('hv', array('help','version'));
    foreach ($options as $key => $value) {
        switch ($key) {
            case 'h':
            case 'help':
                usage();
                break;

            case 'v':
            case 'version':
                version();
                break;
        }
    }

    if (empty($argv)) {
        usage();
    }

    return $argv;
}

function color($command) {
    if (false === $fp = popen($command, 'r')) {
        throw new RuntimeException('cannot run');
    }

    $fab = new Fab\SuperFab();

    while (!feof($fp) && $data = fread($fp, 1024)) {
        echo $fab->paint($data);
    }

    exit(pclose($fp));
}

$args = parseargs($argv);
$command = implode(' ', array_map('escapeshellarg', $args));
color($command);
